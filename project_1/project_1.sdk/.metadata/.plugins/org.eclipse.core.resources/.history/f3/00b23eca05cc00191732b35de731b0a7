#include "Square.h"

Square::Square(u16 number,int xmin,int ymin,int side,u16 rgb,int speed){
	Square::Number = number;
	Square::X_min = xmin;
	Square::Y_min = ymin;
	Square::SideL = side;
	Square::rgb = rgb;
	Square::speed = speed;
}
void Square::Draw(void){
	VGA_SQUAREDRAW_mWriteReg(VGA_DEVICE, REG5_OFFSET, 1);
}
//Set methods
void Square::SetXmin(int xmin){
	Square::X_min = xmin;
}
void Square::SetYmin(int ymin){
	Square::Y_min = ymin;
}
void Square::SetSideL(int side){
	Square::SideL = side;
}
void Square::SetSpeed(int speed){
	Square::speed = speed;
}
void Square::SetRgb(u16 rgb){
	Square::rgb = rgb;
}

//Get methods
int Square::GetXmin(void){
	return Square::X_min;
}
int Square::GetYmin(void){
	return Square::Y_min;
}
int Square::GetSideL(void){
	return Square::SideL;
}
int Square::GetSpeed(void){
	return Square::speed;
}
u16 Square::GetRgb(void){
	return Square::rgb;
}
